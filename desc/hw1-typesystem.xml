<?xml version="1.0" encoding="UTF-8"?>

<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>hw1-typesystem</name>
    <description/>
    <version>1.0</version>
    <vendor/>
  <types>
    <typeDescription>
      <name>edu.cmu.cs.lti.cx.Token</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>postag</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>StemRes</name>
          <description>the stemming term of this token</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>TermNum</name>
          <description>number of terms in this token.</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.lti.cx.Ngram</name>
      <description/>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>TokenList</name>
          <description>tokens of this ngram</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>edu.cmu.cs.lti.cx.Token</elementType>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.lti.cx.Sentence</name>
      <description>sentences</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>TokenList</name>
          <description>list of tokens</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>edu.cmu.cs.lti.cx.Token</elementType>
        </featureDescription>
        <featureDescription>
          <name>NgramList</name>
          <description>list of ngrams</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
          <elementType>edu.cmu.cs.lti.cx.Ngram</elementType>
        </featureDescription>
        <featureDescription>
          <name>RawString</name>
          <description>raw string</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.lti.cx.Question</name>
      <description/>
      <supertypeName>edu.cmu.cs.lti.cx.Sentence</supertypeName>
      <features>
        <featureDescription>
          <name>QuestionType</name>
          <description>question type: what?why?when? etc.</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.lti.cx.Answer</name>
      <description/>
      <supertypeName>edu.cmu.cs.lti.cx.Sentence</supertypeName>
      <features>
        <featureDescription>
          <name>Score</name>
          <description/>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
